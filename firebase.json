{ "hosting": {
  "site": "alpine-figure-414421",
  "public": "dist",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**",
    "build",
    ".env",
    ".env.local",
    ".env.*.local",
    ".DS_Store",
    "npm-debug.log*",
    ".vscode",
    ".firebase",
    "firestore-debug.log",
    "ui-debug.log",
    "dist",
    "apphosting.emulator.yaml"
  ],
  "rewrites": [
    { "source": "**", "destination": "/index.html" }
  ]
},
  "apphosting": [
  {
    "backendId": "portfolio-web-app",
    "ignore": [
      "node_modules",
      "build",
      ".env",
      ".env.local",
      ".env.*.local",
      ".DS_Store",
      "npm-debug.log*",
      ".vscode",
      ".firebase",
      "firestore-debug.log",
      "ui-debug.log",
      "dist",
      "apphosting.emulator.yaml"
    ]
  }
],
  "emulators": {
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}

